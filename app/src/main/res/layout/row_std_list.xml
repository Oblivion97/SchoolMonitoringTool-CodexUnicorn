<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:cntx="com.example.f.schMon.view.student.StdListActivity">
    <!--name,age,roll,father,contact number-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:padding="3dp"
        android:backgroundTint="@color/listcolor"
        android:background="@drawable/border_report_acad_ans">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/stdIV"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:padding="5dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/stdNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/btnTxtWhite"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/stdFatherTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/btnTxtWhite"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/stdGuardianPhnTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/btnTxtWhite"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/stdAgeTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/btnTxtWhite"
                android:textSize="15dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/stdRollTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/btnTxtWhite"
                android:textSize="15dp" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>