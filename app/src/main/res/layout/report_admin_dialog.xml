<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_btn_submit"
    android:orientation="vertical"
    tools:cntx="com.example.f.schMon.analyseAndTest.report.admin.RepAdminActivity">
    <!--

   -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/detailsReportAdminET"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="start"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginLeft="10dp"
                    android:text="Problem Priority:"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/radioGroupRep"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatRadioButton
                        android:id="@+id/radioMajor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="Major"
                        android:textColor="@color/red"
                        app:buttonTint="@color/red" />

                    <android.support.v7.widget.AppCompatRadioButton
                        android:id="@+id/radioModerate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="Moderate"
                        android:textColor="@color/yellow"
                        app:buttonTint="@color/yellow" />

                    <android.support.v7.widget.AppCompatRadioButton
                        android:id="@+id/radioMinor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="Minor"
                        android:textColor="@color/green"
                        app:buttonTint="@color/green" />
                </RadioGroup>


            </LinearLayout>

            <Button
                android:id="@+id/submitReportAdminBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_submit"
                android:text="SUBMIT"
                android:visibility="gone" />


        </LinearLayout>

    </LinearLayout>
</LinearLayout>