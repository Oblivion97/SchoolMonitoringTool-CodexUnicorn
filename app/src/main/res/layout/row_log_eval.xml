<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/evlCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    app:cardBackgroundColor="@color/logbckgrndrowEval"
    app:cardCornerRadius="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/border_log_row"
        android:orientation="horizontal"
        android:weightSum="100">

        <!--texts-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="85"
            android:orientation="vertical">

            <TextView
                android:id="@+id/logName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                android:text="School Name: "
                android:textSize="18dp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/logEduType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"

                android:text="E.Type: "
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/logDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Reported Date: "
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:orientation="vertical"
            android:weightSum="2">

            <ImageView
                android:id="@+id/logEditImg"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="4dp"
                android:src="@drawable/ic_edit" />

            <ImageView
                android:id="@+id/logSyncImg"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="7dp"
                android:src="@drawable/ic_sync_complete" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
