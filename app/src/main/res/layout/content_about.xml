<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="ABOUT APPLICATION"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layerType="software"
                    android:src="@drawable/dottedline" />

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/appLogo"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:src="@drawable/scholmonitoringlogo" />
                <!--social links app-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:weightSum="3">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/facebookLogoApp"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="120dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:src="@drawable/ic_facebook" />

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/webLogoApp"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:src="@drawable/ic_linked" />

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/mailLogoApp"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:src="@drawable/ic_mail"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/appDescriptionTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:text="Write App Description"
                    android:textColor="@color/black" />

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/codexLogo"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:src="@drawable/codexlogo" />
                <!--social links codex-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:weightSum="3">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/facebookLogoCodex"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="50dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:src="@drawable/ic_facebook" />

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/webLogoCodex"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:src="@drawable/ic_linked" />

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/mailLogoCodex"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:src="@drawable/ic_mail" />
                </LinearLayout>

                <TextView
                    android:id="@+id/bracathonDescriptionTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:text="write codex on bracathon 2"
                    android:textColor="@color/black" />


            </LinearLayout>
            <!--About us-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Credits"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layerType="software"
                    android:src="@drawable/dottedline" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Project Manager"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:textStyle="bold" />
                <!--Project Lead Saiful Islam-->
                <LinearLayout
                    android:id="@+id/projectleadContainer"
                    android:layout_width="match_parent"
                    android:layout_height="93dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/border_dev"
                    android:padding="2dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">


                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/projectmanage"

                            />

                        <TextView
                            android:layout_width="170dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center_vertical"
                            android:padding="4dp"
                            android:text="Saiful Islam Palash"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>


                    <ImageView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="0dp"
                        android:padding="10dp"
                        android:src="@drawable/braclogo_about" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Project Co-Ordinator"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:textStyle="bold" />
                <!--co ordinator-->
                <LinearLayout
                    android:id="@+id/coordinatorContainer"
                    android:layout_width="match_parent"
                    android:layout_height="93dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/border_dev"
                    android:padding="2dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">


                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/kawseramir"

                            />

                        <TextView
                            android:layout_width="170dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center_vertical"
                            android:padding="4dp"
                            android:text="Kawsar Amir"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>


                    <ImageView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="0dp"
                        android:padding="10dp"
                        android:src="@drawable/braclogo_about" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="developers"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:textStyle="bold"

                    />
                <!--HM-->
                <LinearLayout
                    android:id="@+id/hmContainer"
                    android:layout_width="match_parent"
                    android:layout_height="93dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/border_dev"
                    android:padding="2dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">


                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/hm"

                            />

                        <TextView
                            android:layout_width="170dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center_vertical"
                            android:padding="4dp"
                            android:text="HM Mahmudul Hasan"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>


                    <ImageView
                        android:id="@+id/hm_link_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="0dp"
                        android:padding="10dp"
                        android:src="@drawable/codexlogo" />

                </LinearLayout>
                <!--MIR-->
                <LinearLayout
                    android:id="@+id/mirContainer"
                    android:layout_width="match_parent"
                    android:layout_height="93dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/border_dev"
                    android:padding="2dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">


                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/mir"

                            />

                        <TextView
                            android:layout_width="170dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center_vertical"
                            android:padding="4dp"
                            android:text="Mir Ferdous"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="0dp"
                        android:padding="10dp"
                        android:src="@drawable/codexlogo" />

                </LinearLayout>


                <!--                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Codex Unicorn Started their journey early 2016 with just two active member."/>-->


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ASSOCIATE WITH"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layerType="software"
                android:src="@drawable/dottedline" />
            <!--sponsor-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/logoBrac"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:padding="0dp"
                    android:src="@drawable/braclogo_about" />

                <ImageView
                    android:id="@+id/logoBracathon"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:src="@drawable/bracathonlogo" />

                <ImageView
                    android:id="@+id/logoBracEducation"
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:src="@drawable/braceducation" />
            </LinearLayout>
        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

</LinearLayout>