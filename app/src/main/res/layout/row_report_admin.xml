<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bckGround2"
    android:orientation="vertical">
    <!-- TextView for displaying ques-->
    <TextView
        android:id="@+id/repQuestion"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp"
        android:text="Is there Drinking Water available in School ?"
        android:textColor="@color/txtViewTxtLight"
        android:textSize="16sp" />
    <!-- RadioGroup for grouping of RadioButton-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Yes"
                android:textColor="@color/txtViewTxtLight"
                android:textSize="16sp" />

            <View
                android:layout_width="100dp"
                android:layout_height="match_parent" />

            <RadioButton
                android:id="@+id/no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="No"
                android:textColor="@color/txtViewTxtLight"
                android:textSize="16sp" />
        </RadioGroup>
    </LinearLayout>

    <!--chkbox-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:orientation="horizontal"
        android:paddingLeft="40dp">

        <CheckBox
            android:id="@+id/repChkYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes" />

        <View
            android:layout_width="100dp"
            android:layout_height="match_parent" />

        <CheckBox
            android:id="@+id/repChkNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No" />
    </LinearLayout>


    <!--circular img btn-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:orientation="horizontal"
        android:paddingLeft="40dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/repYesBtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_circle" />

        <TextView
            android:id="@+id/repYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="Yes"
            android:textStyle="bold" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/repNoBtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="90dp"
            android:src="@drawable/ic_circle" />

        <TextView
            android:id="@+id/repNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="No"
            android:textStyle="bold" />
    </LinearLayout>
    <!--details &amp priority-->
    <LinearLayout
        android:id="@+id/repNoContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/repPriority"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="10dp"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/repPriorityImg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>


        <TextView
            android:id="@+id/repDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginLeft="10dp"
            android:textSize="12dp" />
    </LinearLayout>
</LinearLayout>