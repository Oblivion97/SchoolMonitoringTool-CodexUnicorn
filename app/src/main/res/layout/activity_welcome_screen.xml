<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bckgrnd">
    <!--static image as splash screen-->
    <ImageView
        android:id="@+id/bckgrndSplash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/splash_bckgrnd"
        android:visibility="gone" />

    <!--animation style-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pinkBrac1"
        android:orientation="vertical"
        android:visibility="gone"
        tools:context="com.example.f.schMon.view.splash.SplashScreen">


        <RelativeLayout
            android:id="@+id/layoutTop"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/topImage"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/w_blackboard" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/layoutLeft"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/bellowLeftImage"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/w_teacher" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layoutRight"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/bellowRightImage"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/w_reader" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>