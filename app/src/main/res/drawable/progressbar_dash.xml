    <item android:id="@android:id/progress">
        <rotate
            android:fromDegrees="270"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="270">

            <shape
                android:innerRadiusRatio="3"
                android:shape="ring"
                android:thicknessRatio="9.0"
                android:useLevel="true">


                <!--<corners android:radius="15dip" />-->

                <!--<solid android:color="@color/dashPrgfgrnd" />-->

                <gradient
                    android:angle="90"
                    android:endColor="#687eec"
                    android:startColor="#008bc4"
                    android:type="linear"
                    />


                <rotate
                    android:fromDegrees="0"
                    android:pivotX="50%"
                    android:pivotY="50%"
                    android:toDegrees="360" />
            </shape>

        </rotate>
    </item>

</layer-list>